{
    "name": "meteor_backend",
    "version": "1.0.0",
    "description": "Backend application for Meteor",
    "main": "dist/main.js",
    "scripts": {
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "cross-env node --require dotenv/config .",
        "doc": "typedoc --out docs",
        "dev": "cross-env NODE_ENV=dev ts-node-dev --require dotenv/config src/main.ts",
        "test": "jest --setupFiles dotenv/config",
        "start:background": "nohup npm run start > /dev/null &",
        "stop:background": "killall node"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/busboy": "^0.2.3",
        "@types/express": "^4.17.2",
        "@types/jest": "^25.1.3",
        "@types/node": "^13.7.0",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.7",
        "cross-env": "^7.0.0",
        "jest": "^25.1.0",
        "supertest": "^4.0.2",
        "ts-jest": "^25.2.1",
        "ts-node-dev": "^1.0.0-pre.44",
        "tslint": "^6.0.0",
        "typedoc": "^0.16.10",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@google-cloud/firestore": "^3.5.0",
        "@google-cloud/storage": "^4.3.1",
        "axios": "^0.19.2",
        "busboy": "^0.3.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "fast-crc32c": "^2.0.0",
        "uuid": "^3.4.0"
    }
}
